{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "src/*.test.ts", "build"]
}
