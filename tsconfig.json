{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "es2018","dom"],
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "strict":true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "types":["node","jest"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
